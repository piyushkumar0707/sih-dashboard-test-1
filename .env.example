# Blockchain Service URL
BLOCKCHAIN_API_URL=http://localhost:4000

# Blockchain Configuration (from Blockchain/.env)
ALCHEMY_AMOY_URL=your_alchemy_url_here
PRIVATE_KEY=your_private_key_here
NETWORK=amoy
