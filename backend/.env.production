# Production Backend Environment Variables
# =======================================

# Database Configuration - MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
DB_NAME=travira

# JWT Settings - Use strong production secrets
JWT_SECRET=your-super-strong-production-jwt-secret-change-this
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ALGORITHM=HS256

# Server Settings
PORT=10000
HOST=0.0.0.0
NODE_ENV=production
BASE_URL=https://your-backend-name.onrender.com

# CORS Settings - Allow your frontend domain
FRONTEND_URL=https://travira-frontend.onrender.com
ALLOWED_ORIGINS=https://travira-frontend.onrender.com,https://your-domain.com

# API Settings
API_VERSION=v1
API_PREFIX=/api

# Security Settings
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
EMAIL_SERVICE=nodemailer
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined