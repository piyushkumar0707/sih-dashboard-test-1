# Production Environment Variables for Frontend
# ============================================

# Production API Configuration - UPDATE THESE WITH YOUR RENDER BACKEND URL
REACT_APP_API_BASE_URL=https://your-backend-app-name.onrender.com/api
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=15000

# Production Backend Services - UPDATE WITH YOUR RENDER BACKEND URL  
REACT_APP_BACKEND_URL=https://your-backend-app-name.onrender.com
REACT_APP_WEBSOCKET_URL=wss://your-backend-app-name.onrender.com
REACT_APP_AUTH_ENDPOINT=/api/auth

# Production AI Services - THESE WILL NEED TO BE DEPLOYED SEPARATELY
REACT_APP_CASE_REPORT_API=https://your-ai-case-report.onrender.com
REACT_APP_SAFETY_SCORE_API=https://your-ai-safety-score.onrender.com
REACT_APP_AI_TIMEOUT=20000

# Blockchain Configuration
REACT_APP_BLOCKCHAIN_NETWORK=mumbai
REACT_APP_CHAIN_ID=80001
REACT_APP_RPC_URL=https://rpc-mumbai.maticvigil.com/

# External Services (same as development)
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
REACT_APP_ANALYTICS_ID=your-google-analytics-id
REACT_APP_SENTRY_DSN=your-sentry-dsn-for-error-tracking

# App Configuration
REACT_APP_NAME=TraVira
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Tourist Safety Monitoring System
REACT_APP_AUTHOR=TraVira Team

# Feature Flags
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_ANALYTICS=true

# Production Settings
GENERATE_SOURCEMAP=false
REACT_APP_NODE_ENV=production

# Performance
REACT_APP_MAX_RETRIES=3
REACT_APP_RETRY_DELAY=2000